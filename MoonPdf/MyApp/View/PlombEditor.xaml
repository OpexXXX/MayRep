<UserControl x:Class="ATPWork.MyApp.View.PlombEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATPWork.MyApp.View"
             xmlns:vm="clr-namespace:ATPWork.MyApp.ViewModel.PlombEditorVm"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="PlobmEdit"
            >
    <UserControl.Resources>
        <vm:PlombEditorVM x:Key="PlombEditorViewModel"/>
        <Style x:Key="TextBoxStyle">
            <Setter Property="Control.Height" Value="26" />
            <Setter Property="Control.Margin" Value="1,1,1,1" />
            <Setter Property="Control.FontFamily" Value="Century Gothic" />
            <Setter Property="Control.FontSize" Value="16" />
        </Style>
        <DataTemplate x:Key="ListBoxPlomb">
            <StackPanel Orientation="Horizontal">

                <ComboBox ItemsSource="{Binding Source={StaticResource PlombEditorViewModel}, Path=typePL}" 
                      SelectedItem="{Binding Type}"
                          MinWidth="30" Margin="20,1,1,1" >
                </ComboBox>
                <TextBox  MinWidth="50"  Margin="1,1,1,1">
                <TextBox.Text>
                        <Binding Path="Number"  ValidatesOnExceptions="True"  NotifyOnValidationError="True"  UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <ExceptionValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
                    </TextBox>
                <ComboBox ItemsSource="{Binding Source={StaticResource PlombEditorViewModel}, Path=placePL}" 
                      SelectedItem="{Binding Place}"     
                          MinWidth="50"  Margin="1,1,1,1">
                </ComboBox>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button  Focusable="False" Command="{Binding Source={StaticResource PlombEditorViewModel}, Path=Commands.AddPlombCommand}">
                <Image  Height="25" Source="/ATPWork;component/Resources/icons8Add-50.png" Width="25" />
            </Button>
            <Button  Command="{Binding Source={StaticResource PlombEditorViewModel}, Path=Commands.DeletePlombCommand}" Focusable="False">
                <Image  Height="25" Source="/ATPWork;component/Resources/icons8Delete-50.png" Width="25" />
            </Button>
            <StackPanel>
            <Button Focusable="False"  Command="{Binding Source={StaticResource PlombEditorViewModel}, Path=Commands.IncrementAddPlombComand}">
                <Image x:Name="image" Height="13" Source="/ATPWork;component/Resources/icons8Copy-50.png" Width="25" />
            </Button>
                <Button Focusable="False"  Command="{Binding Source={StaticResource PlombEditorViewModel}, Path=Commands.DecrementAddPlombComand}">
                    <Image  Height="13" Source="/ATPWork;component/Resources/icons8Copy-50.png" Width="25" />
                </Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" >
            <ListBox x:Name="ListBoxW" ItemsSource="{Binding Source={StaticResource PlombEditorViewModel}, Path=PlombList}" SelectedItem="{Binding Source={StaticResource PlombEditorViewModel}, Path=SelectedPlomb}" KeyboardNavigation.TabNavigation="Continue" ItemTemplate="{StaticResource ListBoxPlomb}" SelectionMode="Extended" ContextMenuService.ShowOnDisabled="False">
               
            </ListBox>
        </StackPanel>
    </StackPanel>
</UserControl>
